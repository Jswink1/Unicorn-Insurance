@model ShoppingCartVM
@using Microsoft.Extensions.Options
@inject IOptions<StripeSettings> Stripe
@{
    ViewData["Title"] = "Shopping Cart";
}

<form method="post">
    @if (Model.MobileSuitCartItems.Count > 0 || Model.WeaponCartItems.Count > 0)
    {
        <div class="container">
            <div class="card">

                @* Shopping Cart Item List *@
                <div class="card-body">

                    <div class="row bg-dark text-light justify-content-center mb-2">
                        <i class="fa fa-shopping-cart mt-3" style="font-size: 30px;"></i> &nbsp;
                        <p class="mt-1" style="font-size: 30px;">Mobile Suits</p>
                    </div>

                    @foreach (var MobileSuitItem in Model.MobileSuitCartItems)
                    {
                        <div class="row">

                            @* Item Image *@
                            <div class="col-2 d-none d-lg-block text-center py-2">
                                <img src="@MobileSuitItem.MobileSuit.ImageUrl" class="rounded" style="max-height: 150px; " />
                            </div>

                            @* Item Title and Description *@
                            <div class="col-6 text-left">
                                <h5><strong>@MobileSuitItem.MobileSuit.Name</strong></h5>
                                <p><small>@MobileSuitItem.MobileSuit.Description</small></p>
                            </div>

                            @* Item Price and Quantity *@
                            <div class="col-4 row">
                                <div class="col-8 text-left" style="padding-top:5px;">
                                    <h6><strong> $@MobileSuitItem.MobileSuit.Price</h6>
                                </div>
                                <div class="col-4 float-right">
                                    @* Remove From Cart Button *@
                                    <div class="float-right mx-1">
                                        <a asp-action="deleteMobileSuitItem" asp-route-itemId="@MobileSuitItem.Id" type="submit" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }

                    <div class="row bg-dark text-light justify-content-center mb-2">
                        <i class="fa fa-shopping-cart mt-3" style="font-size: 30px;"></i> &nbsp;
                        <p class="mt-1" style="font-size: 30px;">Weapons</p>
                    </div>

                    @foreach (var WeaponItem in Model.WeaponCartItems)
                    {
                        <div class="row">

                            @* Item Image *@
                            <div class="col-2 d-none d-lg-block text-center py-2">
                                <img src="@WeaponItem.Weapon.ImageUrl" class="rounded" style="max-height: 150px; max-width: 165px;" />
                            </div>

                            @* Item Title and Description *@
                            <div class="col-6 text-left">
                                <h5><strong>@WeaponItem.Weapon.Name</strong></h5>
                                <p><small>@WeaponItem.Weapon.Description</small></p>
                            </div>

                            @* Item Price and Quantity *@
                            <div class="col-4 row">
                                <div class="col-8 text-left" style="padding-top:5px;">
                                    <h6><strong> $@WeaponItem.Weapon.Price Each</h6>
                                    <br>
                                    <h6><strong>Quantity: @WeaponItem.Count</h6>
                                    <br>
                                    <h6><strong>Total: $@(WeaponItem.Weapon.Price * WeaponItem.Count)</h6>
                                </div>
                                <div class="col-4">

                                    @* Quantity and Remove Buttons *@
                                    <div class="">
                                        <a asp-action="IncreaseWeaponQuantity" asp-route-itemId="@WeaponItem.Weapon.Id" type="submit" class="btn btn-primary">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                    </div>
                                    @if (WeaponItem.Count > 1)
                                    {
                                        <div class="">
                                            <a asp-action="DecreaseWeaponQuantity" asp-route-itemId="@WeaponItem.Weapon.Id" type="submit" class="btn btn-danger">
                                                <i class="fas fa-minus"></i>
                                            </a>
                                        </div>
                                    }
                                    <div class="">
                                        <a asp-action="deleteWeaponItem" asp-route-itemId="@WeaponItem.Id" type="submit" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }

                </div>
                @*Total*@
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-info"> Total (USD)</span>
                                <strong class="text-info">$ <span id="txtOrderTotal">@Model.OrderHeader.OrderTotal</span></strong>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="card-footer row">

                        @* Convert Total into cents for Stripe *@
                        @{
                            var OrderTotalForStripe = Model.OrderHeader.OrderTotal * 100;
                        }

                        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                data-key="@Stripe.Value.PublishableKey"
                                data-amount="@OrderTotalForStripe"
                                data-name="Unicorn Insurance Product Purchase"
                                data-label="Place Order"
                                data-description="Purchase Mobile Suits and Weapons"
                                data-locale="auto"
                                data-allow-remember-me="false"
                                data-image="https://stripe.com/img/documentation/checkout/marketplace.png">
                        </script>

                        @*Hide the stripe button so that only the custom button displays*@
                        <script>
                                    document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
                        </script>

                        @* Checkout Button *@
                        <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                            <button type="submit" value="Place Order" class="btn btn-success form-control">Place Order</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div>There are no items in the shopping cart</div>
    }
</form>