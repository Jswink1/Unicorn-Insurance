@model UserMobileSuit
@using System.Reflection

@{ ViewData["Title"] = Model.MobileSuit.Name; }

<form method="post">
    <h2 class="display-4">My @Model.MobileSuit.Name</h2>
    <div class="row">
        <div class="col-md-6">

            <img src="@Model.MobileSuit.ImageUrl" class="d-block w-100" />
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Model.MobileSuit.Description
                    </p>
                </div>
            </div>

            <hr />

            <ul class="list-group">

                @foreach (PropertyInfo property in Model.MobileSuit.GetType().GetProperties())
                {
                    if (property.Name != "Id" &&
                        property.Name != "Name" &&
                        property.Name != "Description" &&
                        property.Name != "Price" &&
                        property.Name != "CustomWeapon" &&
                        property.Name != "ImageUrl" &&
                        @property.GetValue(Model.MobileSuit) != null)
                    {
                        <li class="list-group-item"><span class="font-weight-bold">@property.Name - </span> @property.GetValue(Model.MobileSuit)</li> 
                    }
                }
            </ul>
        </div>
    </div>
    <div class="row mt-2">

        @* "Add to Cart" and "Back to List" Button *@
        @*<div class="col-12 col-md-6 pb-1">
            <a asp-action="Index" class="btn btn-primary form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
        </div>
        <div class="col-12 col-md-6 pb-1">

            <button type="submit" value="Add to Cart" class="btn btn-success btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>

        </div>*@
    </div>
</form>
