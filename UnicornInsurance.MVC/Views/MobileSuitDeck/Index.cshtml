@model List<UserMobileSuit>
@using UnicornInsurance.MVC.Constants 
@{ ViewData["Title"] = "Mobile Suit Deck"; }

<div class="container">

    @* PAGE TITLE *@
    <h1 class="display-3 text-center">Mobile Suit Deck</h1>

    <div class="row">
        @foreach (var UserMobileSuit in Model)
        {
            <div class="col-lg-4">
                <div class="card mb-4">

                 @* USER MOBILE SUIT IMAGE *@
                <img src="@UserMobileSuit.MobileSuit.ImageUrl" class="mobile-suit-img" />

                <div class="card-body card-body-grey text-center">

                    @* USER MOBILE SUIT NAME *@
                    <h1 class="card-title">@UserMobileSuit.MobileSuit.Name</h1>

                    @* USER MOBILE SUIT STATUS *@
                    @if (UserMobileSuit.IsDamaged == false)
                    {
                        <h3 class="card-text">Status: <span class="green-font">Operational</span></h3>
                    }
                    else if (UserMobileSuit.IsDamaged == true)
                    {
                        <h3 class="card-text">Status: <span class="red-font">Damaged</span></h3>
                    }                    

                    @* USER MOBILE SUIT DETAILS BUTTON *@
                    <a asp-action="Details" asp-route-id="@UserMobileSuit.Id" class="blue-button">View My Mobile Suit</a>
                </div>
                </div>
            </div>
         }
    </div>
</div>
