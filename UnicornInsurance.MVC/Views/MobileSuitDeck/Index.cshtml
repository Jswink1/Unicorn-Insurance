@model List<UserMobileSuit>
@{ ViewData["Title"] = "Mobile Suit Deck"; }

<div class="container">
    <div class="row">

        @* Page Header/Title *@
        <div class="col-9">
            <h2 class="display-4">Mobile Suit Deck</h2>
        </div>
    </div>

    <div class="row">

        @foreach (var UserMobileSuit in Model)
        {
            <div class="col-lg-4">
                <div class="card mb-4 shadow-sm">

                 @* Product Image *@
                <img src="@UserMobileSuit.MobileSuit.ImageUrl" class="card-img-top rounded w-100" />

                <div class="card-body">
                    <h3 class="card-title">@UserMobileSuit.MobileSuit.Name</h3>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-center">
                            <a asp-action="Details" asp-route-id="@UserMobileSuit.Id" class="btn btn-secondary">View My Mobile Suit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         }
    </div>
</div>
