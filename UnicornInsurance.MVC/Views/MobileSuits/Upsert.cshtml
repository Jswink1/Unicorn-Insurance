@model MobileSuitVM
@{
    @* If the model is being edited change the title *@
    var title = "Create Mobile Suit";
    @if (Model.Id != 0)
    {
        title = $"Edit {Model.Name}";
    }

    ViewData["Title"] = title;
}

<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">

        @* Validation Errors *@
        @if (Model.Errors is not null)
        {
            <ul>
                @foreach (var error in Model.Errors)
                {
                    <li class="text-danger">@error</li>
                }
            </ul>
        }

        @if (Model.Id != 0)
        {
            @* If the model is being edited include the Model Id and ImageUrl as a hidden field *@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            if (Model.CustomWeapon is not null &&
                Model.CustomWeapon.Id != 0)
            {
                <input type="hidden" asp-for="CustomWeapon.Id" />
            }
        }

        @* Page Header/Title *@
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">

            @* Mobile Suit Name Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>


            @* Mobile Suit Description Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
            </div>

            @* Mobile Suit Price Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" />
                </div>
            </div>

            @* Mobile Suit Type Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Type"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Type" class="form-control" />
                </div>
            </div>

            @* Mobile Suit Manufacturer Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Manufacturer"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Manufacturer" class="form-control" />
                </div>
            </div>

            @* Mobile Suit Height Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Height"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Height" class="form-control" />
                </div>
            </div>

            @* Mobile Suit Weight Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Weight"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Weight" class="form-control" />
                </div>
            </div>

            @* Mobile Suit PowerOutput Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="PowerOutput"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PowerOutput" class="form-control" />
                </div>
            </div>

            @* Mobile Suit Armor Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="Armor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Armor" class="form-control" />
                </div>
            </div>

            @* Image File Upload *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    Image
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                </div>
            </div>
        </div>

        @*If the model is being edited, display the current image*@
        @if (Model.Id != 0)
        {
            <div class="col-3 offset-1 mt-4">
                <img src="@Model.ImageUrl" class="d-block w-100" />
            </div>
        }

        <div class="col-12 border-bottom">
            <h4 class="text-primary">@title Custom Weapon (Optional)</h4>
        </div>
        <div class="col-8 pt-4">

            @* Mobile Suit CustomWeapon Name Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="CustomWeapon.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CustomWeapon.Name" class="form-control" />
                </div>
            </div>

            @* Mobile Suit CustomWeapon Description Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="CustomWeapon.Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="CustomWeapon.Description" class="form-control"></textarea>
                </div>
            </div>

            @* Mobile Suit CustomWeapon Price Input *@
            <div class="form-group row mt-2">
                <div class="col-3">
                    <label asp-for="CustomWeapon.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CustomWeapon.Price" class="form-control" />
                </div>
            </div>

            <div class="form-group row mt-2">
                <div class="col-8 offset-3">
                    @*Check whether to display Edit or Create Button*@
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Id" />
                    }
                    else
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/kcmkof3wb0uhjlr4up6uyig5s7ddla2nn8ensssdsei1yxa7/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/initializeTinyMCE.js"></script>

    <script src="~/js/openAlertModal.js"></script>
    <script>
        $(document).ready(function () {
            var successMsg = "@TempData["Success"]";
            var errorMsg = "@TempData["Error"]";

            if (successMsg) {
                openSuccessModal(successMsg);
            }
            if (errorMsg) {
                openErrorModal(errorMsg);
            }
        });
    </script>
}