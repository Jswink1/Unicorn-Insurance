@using UnicornInsurance.MVC.Constants

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        // USER ACCOUNT DROPDOWN MENU
        <li class="nav-item dropdown mt-2">
            <a class="rounded-pill user-btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity.Name <i class="fas fa-user-circle" style="font-size: 17px;"></i>
            </a>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">Orders</a></li>

                @if (User.IsInRole(SD.CustomerRole))
                {
                    <li><a class="dropdown-item" asp-controller="MobileSuitDeck" asp-action="Index">Mobile Suit Deck</a></li>
                }
                @if (User.IsInRole(SD.AdminRole))
                {
                    <li><a class="dropdown-item" asp-controller="Deployments" asp-action="Index">Deployments</a></li>
                }
            </ul>
        </li>
        // LOGOUT BUTTON
        <li class="nav-item mt-2">
            <a class="rounded-pill user-btn" asp-action="Logout" asp-controller="Users">
                Logout
                <span>
                    <i class="fas fa-user-times"></i>
                </span>
            </a>
        </li>
    }
    else
    {
        // REGISTER BUTTON
        <li class="nav-item">
            <a class="rounded-pill user-btn" asp-action="Register" asp-controller="Users">
                Register
                <span>
                    <i class="fas fa-feather"></i>
                </span>
            </a>
        </li>
        // LOGIN BUTTON
        <li class="nav-item">
            <a class="rounded-pill user-btn" asp-action="Login" asp-controller="Users">
                Login
                <span>
                    <i class="fas fa-child"></i>
                </span>
            </a>
        </li>
    }
</ul>
