<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" title="Manage" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Hello @User.Identity.Name!
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" asp-controller="Orders" asp-action="Index">Orders</a>                
            </div>
        </li>
        <li class="nav-item">
            <form class="form-inline" method="post" asp-action="Logout" asp-controller="Users" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link ">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">

            <a class="nav-link" asp-action="Register" asp-controller="Users">
                Register
            </a>
        </li>
        <li class="nav-item">

            <a class="nav-link" asp-action="Login" asp-controller="Users">
                Login
            </a>
        </li>
    }
</ul>
