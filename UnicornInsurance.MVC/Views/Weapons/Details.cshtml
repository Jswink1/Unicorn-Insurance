@model Weapon

@{
    ViewData["Title"] = Model.Name;
}

<form method="post">
    <input type="hidden" asp-for="Price" />

    <h2 class="display-4">@Model.Name</h2>
    <div class="row">
        <div class="col-md-6">

            <img src="@Model.ImageUrl" class="d-block w-100" />
        </div>

        <div class="col-md-6">

            <div class="row">
                <div class="col-md-12">
                    <h4>@Model.Price.ToString("C")</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Model.Description
                    </p>
                </div>
            </div>

            <hr />
            <div class="row mt-2">
                <partial name="_AddToCartAndBackToListButton" />
            </div>
        </div>
    </div>
</form>
